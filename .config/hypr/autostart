#!/usr/bin/bash

# variables
config=$HOME/.config/hypr
scripts=$config/scripts

# notification daemon
dunst &

# waybar
$scripts/launch_waybar &
$scripts/tools/dynamic &

# wallpaper
# $scripts/wall $config/wallpapers/cloud.png &
# hyprpaper &

# effects
$scripts/rgb &

# other
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP &

# Conky
#killall -q conky
#/home/mattia/.dotfiles/.config/bspwm/conky/conky.sh &

# Bluetooth manager
blueman-applet &

# Blue-light filter
wlsunset -t 3500 -T 6000 &

#swayidle daemon and inhibitor
swayidle -w \
  timeout 600 'gtklock' \
  before-sleep 'gtklock' \
  after-resume 'hyprpaper &' &

wl-mpris-idle-inhibit &

# nordvpn service
systemctl start nordvpnd.service &

# Megasync
sleep 10 && megasync &

# Automatic mounting
udiskie &

# Launch swww and wallpaper script
swww init && ~/.local/bin/wallpaper ~/.config/wallpapers/ &

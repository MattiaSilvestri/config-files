# nordvpn service
systemctl start nordvpnd.service &

# Megasync and pcloud
sleep 5 && ~/AppImages/pcloud &

# Automatic mounting
udiskie &

# Launch swww and wallpaper script
# sleep 5 && swww-daemon && ~/.local/bin/wallpaper ~/.config/wallpapers/ &
sleep 5 && swww-daemon & 
sleep 5 && waypaper-engine daemon &

# Network manager
# nm-applet &

# Set soruce volume
pamixer --default-source --set-volume 30

# Hyprland stuff
# hyprctl keyword general:layout "master" &
